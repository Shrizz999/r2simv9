<?xml version="1.0" encoding="utf-8"?>
<robot name="r2krishna">

  <material name="white"><color rgba="1 1 1 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>

  <link name="base_footprint"/>
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="-0.1 0 -0.05" rpy="0 0 0"/> 
      <mass value="25.0"/> 
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="0.5" iyz="0" izz="0.5"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><mesh filename="package://r2krishna/meshes/base.STL"/></geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry><box size="0.6 0.4 0.15"/></geometry>
    </collision>
  </link>

  <link name="imu_link"/>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="lidar_link">
    <visual><geometry><cylinder radius="0.05" length="0.04"/></geometry><material name="black"/></visual>
    <inertial><mass value="0.1"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.20 0 0.25" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual><geometry><box size="0.05 0.05 0.05"/></geometry><material name="black"/></visual>
    <inertial><mass value="0.05"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.32 0 0.2" rpy="0 0.15 0"/>
  </joint>

  <gazebo reference="camera_link">
    <sensor name="camera" type="camera"> 
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <topic>/camera/image_raw</topic> 
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image><width>640</width><height>480</height><format>R8G8B8</format></image>
        <clip><near>0.05</near><far>10.0</far></clip>
       </camera>
    </sensor>
  </gazebo>

  <link name="bumper_link">
    <visual><geometry><box size="0.05 0.35 0.05"/></geometry><material name="black"/></visual>
    <collision name="bumper_collision"><geometry><box size="0.05 0.35 0.05"/></geometry></collision>
    <inertial><mass value="0.1"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>
  <joint name="bumper_joint" type="fixed"><parent link="base_link"/><child link="bumper_link"/><origin xyz="0.32 0 0.05" rpy="0 0 0"/></joint>

  <link name="left_rover_side">
    <inertial><origin xyz="-0.026 0 -0.145"/><mass value="5.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_rover_side.STL"/></geometry><material name="white"/></visual>
  </link>
  <joint name="left_rover_side_joint" type="revolute">
    <origin xyz="0.151 -0.3 -0.086"/><parent link="base_link"/><child link="left_rover_side"/><axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="1000" velocity="10"/>
    <dynamics damping="2.0" friction="1.0"/>
  </joint>

  <link name="left_1">
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_1.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 -0.02 0" rpy="1.57 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="left_1_joint" type="continuous"><origin xyz="-0.15 -0.01 -0.15"/><parent link="left_rover_side"/><child link="left_1"/><axis xyz="0 1 0"/></joint>

  <link name="left_2">
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_2.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 -0.02 0" rpy="1.57 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="left_2_joint" type="continuous"><origin xyz="-0.3 -0.3 -0.23"/><parent link="base_link"/><child link="left_2"/><axis xyz="0 1 0"/></joint>

  <link name="right_rover_side">
    <inertial><origin xyz="-0.026 0 -0.145"/><mass value="5.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_rover_side.STL"/></geometry><material name="white"/></visual>
  </link>
  <joint name="right_rover_side_joint" type="revolute">
    <origin xyz="0.151 0.295 -0.086"/><parent link="base_link"/><child link="right_rover_side"/><axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="1000" velocity="10"/>
    <dynamics damping="2.0" friction="1.0"/>
  </joint>

  <link name="right_1">
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_1.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0.02 0" rpy="1.57 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="right_1_joint" type="continuous"><origin xyz="-0.15 0.01 -0.15"/><parent link="right_rover_side"/><child link="right_1"/><axis xyz="0 1 0"/></joint>

  <link name="right_2">
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_2.STL"/></geometry><material name="white"/></visual>
    <collision>
        <origin xyz="0 0.02 0" rpy="1.57 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry>
        <surface><friction><ode><mu>2.0</mu><mu2>2.0</mu2></ode></friction></surface>
    </collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="right_2_joint" type="continuous"><origin xyz="-0.3 0.3 -0.23"/><parent link="base_link"/><child link="right_2"/><axis xyz="0 1 0"/></joint>

  <link name="tri_1">
    <visual><geometry><mesh filename="package://r2krishna/meshes/tri_1.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 -0.04 0"/><geometry><box size="0.2 0.05 0.2"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="tri_1_joint" type="continuous"><origin xyz="0.14 -0.01 -0.15"/><parent link="left_rover_side"/><child link="tri_1"/><axis xyz="0 1 0"/></joint>

  <link name="tri_2">
    <visual><geometry><mesh filename="package://r2krishna/meshes/tri_2.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0.04 0"/><geometry><box size="0.2 0.05 0.2"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="tri_2_joint" type="continuous"><origin xyz="0.14 0.01 -0.15"/><parent link="right_rover_side"/><child link="tri_2"/><axis xyz="0 1 0"/></joint>

  <link name="caster_back">
    <collision>
        <geometry><sphere radius="0.1"/></geometry>
        <surface>
            <friction>
                <ode>
                    <mu>0.0</mu>
                    <mu2>0.0</mu2>
                    <slip1>1.0</slip1>
                    <slip2>1.0</slip2>
                </ode>
            </friction>
        </surface>
    </collision>
    <inertial><mass value="15.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>
  <joint name="caster_back_joint" type="fixed"><parent link="base_link"/><child link="caster_back"/><origin xyz="-0.3 0 -0.15"/></joint>

  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_2_joint</left_joint><left_joint>left_1_joint</left_joint>
      <right_joint>right_2_joint</right_joint><right_joint>right_1_joint</right_joint>
      <wheel_separation>0.6</wheel_separation><wheel_radius>0.15</wheel_radius>
      <topic>/cmd_vel</topic><odom_topic>/odom</odom_topic><tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id><child_frame_id>base_footprint</child_frame_id>
    </plugin>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>tri_1_joint</left_joint><right_joint>tri_2_joint</right_joint>
      <wheel_separation>0.6</wheel_separation><wheel_radius>0.15</wheel_radius>
      <topic>/cmd_vel_front</topic>
    </plugin>
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher"><topic>joint_states</topic></plugin>
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"></plugin>
  </gazebo>
  
  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose><visualize>true</visualize><update_rate>10</update_rate><topic>/scan</topic>
      <ray><scan><horizontal><samples>360</samples><min_angle>-3.14</min_angle><max_angle>3.14</max_angle></horizontal></scan><range><min>0.05</min><max>25.0</max></range></ray>
    </sensor>
  </gazebo>
  <gazebo reference="imu_link"><sensor name="imu" type="imu"><topic>/imu</topic><update_rate>50</update_rate><always_on>1</always_on></sensor></gazebo>
</robot>
